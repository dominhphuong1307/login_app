<li id="micropost-<%= micropost.id %>">
    <%= link_to gravatar_for(micropost.user), micropost.user %>
    <span class="user">
        <%=link_to micropost.user.username, micropost.user%>
        </span>
    <span class="content">
        <%= micropost.content%></span><br>
    <span class="timestamp">
           Posted  <%= time_ago_in_words(micropost.created_at)%> ago.</span>
    <%= link_to  "Delete Post", micropost, method: :delete, data: { confirm: 'Are you sure?' } %>
</li>