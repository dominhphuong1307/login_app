.<div class="container">
 
<div class="row">
<div class="col-md-3"></div>
<div class="col-md-6">
  
<h1>  New Register </h1>

<%= form_with scope: :user, url: users_path, local: true do |f|%>
<%# Error %>
   <%= render 'share/error'%>
<!-- Name -->
<div class="form-group">
   <%= f.label :username %><br>
   <%= f.text_field :username, class:"form-control" %><br>
   <%# </div> %>
   <!-- Email -->
<%# <div class="form-group"> %>
   <%= f.label :email%><br>
   <%= f.text_field :email,class:"form-control" %><br>
<%# </div> %>
   <!-- Password -->
<%# <div class="form-group"> %>
   <%= f.label :password %><br>
   <%= f.password_field :password ,class:"form-control"%><br>
<%# </div> %>

<%# <div class="form-group"> %>
   <%= f.label :password_confirmation, "Confirmation Password" %><br>
   <%= f.password_field :password_confirmation ,class:"form-control"%><br>
<%# </div> %>

   <%= f.submit "Sign up" ,class:"btn btn-primary",method: :post%> <%= link_to  "Login", login_path, class:"btn btn-primary" %>
<% end %>

</div>


</div>
<div class="col-md-3"></div>
</div>